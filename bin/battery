#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

. /home/functions

if [ $(get_distro) = "gentoo" ] 
then 
	echo "$(expr $(grep "remaining capacity" /proc/acpi/battery/BAT0/state | awk '{print $3}') \* 100 / 4400)%"
elif [ $(get_distro) = "archlinux" ] 
then 
	acpi -b | awk {'print $4'} | sed "s/,//g"
else 
	msg_error "Not supported on this Linux distribution. "
fi
