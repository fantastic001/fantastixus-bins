#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

LS_ARGS="-d"
if [ "$1" = "--help" ] 
then 
	echo "

Usage: $0  arg
Show full path of any file or directory 
	
	"
	exit 1 
fi

FILE="$1"
echo ""$(pwd)"/"$(ls $LS_ARGS "$FILE")""
