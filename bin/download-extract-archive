#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

. /home/functions

echo "Enter link"
read URLA
cd Downloads
echo ""
msg_info "Making directory"
DIRN="$(echo $URLA | sed "s/http:\/\///g" | sed "s/\//-/g").d" 
mkdir $DIRN
NAMEU=$(echo $URLA | sed "s/http:\/\///g" | sed "s/\//-/g")
echo ""
msg_info "Downloading..."
no_output wget $URLA -O $NAMEU
cd $DIRN
echo "select file format..." 
echo "

	1)	zip 
	2) 	tar.bz2
	3) 	xz

"
read FFFFF
if [ $FFFFF = "1" ] 
then 
	unzip ../$NAMEU
fi
if [ $FFFFF = "2" ] 
then 
	tar -xvjf ../$NAMEU 
fi

if [ $FFFFF = "3" ] 
then 
	tar -xvJf ../$NAMEU 
fi
ranger
