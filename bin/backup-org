#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

cd /data

TARBALL_NAME="org-backup-$(date +%Y-%m-%d-%H-%M).tar.gz"

tar -cvf $TARBALL_NAME Documents/About\ Me/ Documents/Finance/ Documents/Notes

gpg -c $TARBALL_NAME

if which rclone; then 
	rclone copy "$TARBALL_NAME.gpg" DropBox:/
fi
