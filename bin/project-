#!/bin/bash

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

cd /data/Programming/Programs/Projects/

echo "Welcome to script"

echo -n "Enter app name "
read APPNAME

if [ -d $APPNAME ] 
then 
	
	cd $APPNAME
	ranger 
else

	mkdir $APPNAME
	cd $APPNAME
	echo "//Author Stefan Nozinic" > main.cpp
	echo "" >> main.cpp
	echo "int main(int argc, char* argv[])" >> main.cpp
	ranger

fi
