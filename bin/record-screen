#!/bin/sh

OUTPUT=""
RESOLUTION=""

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: record-screen [OPTION]... [FILE]..."
            echo "Script for starting ffmpeg with options for optimized screen recording"
            echo 
            #list of options following
            echo -e "-o, --oputput-file \t define output file"
			echo -e "-r, --resolution \t define screen resolution in format"
            echo -e "-h, --help \t print this message"
        	exit 0
        ;;

        -o|--output-file)
            shift
            OUTPUT="$OPTARG"

        ;;

        -r|--resolution)
            shift
            RESOLUTION="$OPTARG"

        --)
           shift
           break
        ;;

    esac
    shift
done

if [[ -z $OUTPUT ]]; then
	OUTPUT=output.mp4
fi

if [[ -z $RESOLUTION ]]; then
	RESOLUTION=$( xrandr | grep '*' | cut -f 4 -d ' ' )
fi

ffmpeg -video_size "$RESOLUTION" -framerate 5 -f x11grab -i :0.0+0.0 -c:v libx264rgb -crf 0 -preset ultrafast -color_range 2 "$OUTPUT"

exit 0