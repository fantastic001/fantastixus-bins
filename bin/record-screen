#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

if [ -z "$1" ]; then 
	OUTPUT=output.mp4
else
	OUTPUT="$1"
fi

ffmpeg -video_size 1920x1080 -framerate 5 -f x11grab -i :0.0+0.0 -c:v libx264rgb -crf 0 -preset ultrafast -color_range 2 "$OUTPUT"
