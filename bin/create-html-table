#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

function help
{
	cat << EOF
Usage $0 -h NUM -r NUM

	-h NUM		number of colums (headers) 
	-r NUM		number of rows 
EOF
exit 1
}

HN=
RN=

while [ ! -z $1 ] 
do
	case $1 in 
		-h) shift; HN=$1; shift ;; 
		-r) shift; RN=$1; shift ;;
		*) help ;;
		esac
done

FILE="/tmp/htmltable-$(date +%y%m%d%H%M%S)"

echo "<table>" > $FILE
echo "<tr>" >> $FILE

for (( i=1; i <= $HN; i++ ))
do
	echo -n "Enter header $i: "
	read HEADER
	echo "<th>$HEADER</th>" >> $FILE
done
echo "</tr>" >> $FILE 

for (( r=1; r <= $RN; r++ ))
do
	echo "<tr>" >> $FILE
	for (( h=1; h <= $HN; h++ ))
	do
		echo -n "Enter row $r for header $h: "
		read FIELD
		echo "<td>$FIELD</td>" >> $FILE
	done
	echo "</tr>" >> $FILE
done
echo "</table>" >> $FILE

echo 
echo "Would you want to copy your table to clipboard (using xclip)? (y/n)" 
read COPY 
if [ $COPY = "y" ]; then 
	xclip $FILE
fi
rm $FILE
