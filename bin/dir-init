#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

. /home/functions

cd ~/ 
mkdir data 
cd data 

mkdir -p Documents/Library/{Books,Papers,Magazines,Tests} Documents/Private Documents/School Documents/Security/Passwords 
mkdir Music
mkdir -p "Research and development" 
mkdir -p "Graphics, photography and design"
mkdir Videos
mkdir -p "/data/Graphics, photography and design/Pictures/Screenshots/"
msg_info "Initialization finished. Please link your ~/data dir in / by running as root"
msg_info "ln -s $HOME/data /data"

msg_info "Enjoy :)"
