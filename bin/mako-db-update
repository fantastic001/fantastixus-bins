#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

rm -rf ~/.mako/db/Projects
rm -rf ~/.mako/db/Schedule/*
cp -r /data/Documents/About\ Me/* ~/.mako/db/
mkdir -p '~/.mako/db/Schedule conditions/'
mkdir -p ~/.mako/db/Tables/
mkdir -p ~/.mako/db/Measurements/

