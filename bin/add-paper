#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

DOWNLOAD_OPT=

if [ ! -z "$1" ]; then 
	DOWNLOAD_OPT="--download-url $1"
fi

mkdir -p /tmp/papertrack-downloads

PAPERTRACK_ASK_ON_DEFAULT=1 papertrack get --downloader simple --collector simple --location /data/Documents/Library/Papers --download-location /tmp/papertrack-downloads $DOWNLOAD_OPT

