#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

IN="LVDS1"
EXT="HDMI1"

if (xrandr | grep "$EXT disconnected"); then
	xrandr --output $IN --auto --output $EXT --off 
else
	xrandr --output $IN --auto --output $EXT --auto --right-of $IN
fi

