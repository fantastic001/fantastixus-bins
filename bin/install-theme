#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done



echo -n "Enter theme path "
read THEME

echo -n "Extension of archive (e.g gz)"
read THEME_EXT

case $THEME_EXT in 
	*gz) TAR_CMD="tar -xvf" ;;
	*bz2) TAR_CMD="tar -xvjf" ;;
	*xz) TAR_CMD="tar -xvJf" ;;
	*) echo "Invalid extension, exiting"; exit 1 ;;
	esac

$TAR_CMD  "$THEME" -C /home/$(whoami)/.themes/

echo -n "Do you want to change theme using lxappearance? "
read CHANGE_THEME

if [ $CHANGE_THEME = "y" ] 
then 
	lxappearance
fi
