#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

if grep "default" ~/.asoundrc; then 
	echo "
pcm.!hdmi {
    type hw
    card 0
    device 3
}
" > ~/.asoundrc
	pacmd set-default-sink 1
else
	echo "
pcm.!default {
    type hw
    card 0
    device 0
}

" > ~/.asoundrc
	pacmd set-default-sink 0
fi

