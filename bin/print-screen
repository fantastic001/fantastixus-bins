#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

SS_FILE="/data/Graphics, photography and design/Pictures/Screenshots/$(date +%Y-%m-%d-%s).png"
import "$SS_FILE"
rm -rf ~/ss.png 
ln -s "$SS_FILE" ~/ss.png
#notify-send -u low "Upload ~/ss.png to the prntscr.com or something like that. " 
#firefox http://prntscr.com
