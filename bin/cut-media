#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

. /home/functions

do_help() 
{
	cat << EOF
Usage: $0 hh:mm:ss.tt seconds input output
EOF
exit 1
}

INPUT=$3
OUTPUT=$4
START=$1
STOP=$2

if [ $1 = "--help" -o $1 = "-h" ] 
then 
	do_help
fi
msg_info "ffmpeg -ss \"$START\" -t \"$STOP\" -i \"$INPUT\" -acodec copy \"$OUTPUT\""
ffmpeg -ss "$START" -t "$STOP" -i "$INPUT" -acodec copy "$OUTPUT"


