#!/bin/sh 

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

lynx --dump ftp://ftp.kernel.org/pub/linux/kernel/v3.x/ | grep ftp:// | grep ".*/linux-.*.xz$" | sed "s/.*-\([0-9].*\).tar.xz/\1/g" | sort | tail -1
