#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

MAINTAINER="Stefan Nozinic <stefan AT lugons DOT org>"

cat << EOFL
PKG_NAME=""
PKG_BUILD=1

#PKG_VERSION=
#PKG_SOURCE=""
#PKG_MD5SUM=""

PKG_HOMEPAGE=""
PKG_MAINTAINER="$MAINTAINER"

#PKG_VCS=""

build_pkg() 
{

}

install_pkg() 
{

}
EOFL
