#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

echo "
\\documentclass[a4paper,12pt]{article}

\\usepackage[utf8]{inputenc}

\\begin{document}

\\title{The Title}
\\author{The Author(s)}
\\date{The Date}
\\maketitle


\\end{document}
" > $1 
