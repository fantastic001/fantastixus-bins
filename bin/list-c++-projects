#!/bin/bash

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

echo "Do you want to list files in project directories?"
read LISTP
echo ""
if [ $LISTP = "y" ]
then
	cd /data/Programming/Projects/Tasks/C++
	ls
	exit 
fi

ls /data/Programming/Projects/Tasks/C++ | sort
