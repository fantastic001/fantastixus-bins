#!/bin/bash

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done
PANEL="avant-window-navigator"
WINDOW_MANAGER="fusion-icon"
WIDGET_MANAGER="screenlets"

CONKY_PROCESSES=$(ps aux | grep conky | sed "/grep/d" | wc -l) 
if [ $CONKY_PROCESSES -lt 1 ]; then 
	if [ -f ~/.conkyrc ] 
	then 
		conky & 
	fi
fi

$PANEL &  
$WIDGET_MANAGER & 

$WINDOW_MANAGER
