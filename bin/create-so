#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

if [ $1 == "--help" ] 
then

	echo "
	
	usage $0 soname output files 

	Optional options: 
		--qt 		use qt lib
		--add ADITIONAL add aditional flags and libs

	gcc -shared -Wl,-soname,libmean.so.1 -o libmean.so.1.0.1  calc_mean.c
	
	"

fi
ADDITIONAL=""

if [ $1 = "--qt" ] 
then 
	shift
	ADDITIONAL="$(pkg-config --libs --cflags QtCore)"
fi
if [ $1 = "--add" ]; then 
	shift 
	ADITIONAL="$ADITIONAL $1"
	shift 
fi

COMPILER="g++"
FLAGS="-shared -Wall -fPIC -Wl,-soname"
SONAME=$1
OUTPUT=$2
FILES="$3 $4 $5 $6 $7 $8 $9"
echo $COMPILER $ADDITIONAL ${FLAGS},$SONAME -o $OUTPUT $FILES
$COMPILER $ADDITIONAL ${FLAGS},$SONAME -o $OUTPUT $FILES
