#!/bin/bash 

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

#if [ -x $(which xcompmgr) ] 
#then 
#	xcompmgr -cCfF -r25 -o.20 -t-8 -D4 &
#fi

rm .Xdefaults

ln -s .Xdefaults-/fluxbox .Xdefaults

echo "fluxbox" > .currentwm

fluxbox
