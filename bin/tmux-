#!/bin/bash

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done
cd
urxvt -e tmux & 
sleep 1
tmux new-window 
tmux new-window
tmux new-window
tmux new-window
tmux new-window
tmux new-window irssi 
tmux new-window htop 
tmux new-window "ranger Uputstva /data /packages ."
tmux new-window su
tmux new-window su 
tmux new-window su 
