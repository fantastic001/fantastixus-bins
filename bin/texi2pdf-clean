#!/bin/sh

SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done

. /home/functions 

if [ "$1" = "--help" ]; then 
	echo "Usage: $0 texfile" 
	exit
fi

msg_info "Converting $1 to PDF file"

echo "texi2pdf --clean \"$1\""
texi2pdf --clean "$1"
