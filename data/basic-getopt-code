# In the firts row usage needs to be added in format: script name [OPTION]... [FILE]
# Description from the second row should be replaced with actual description
# Third row needs to be left blank
# Each following row shold contain description of options in format:
#   -short option, --long-option \t description


SHORTOPTS=":h"
LONGOPTS="help"
OPTS=$(getopt -o $SHORTOPTS --longoptions $LONGOPTS -n "$0" -- "$@")
eval set -- "$OPTS"

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            echo "Usage: "
            echo "Description"
            echo 
            #list of options following
            echo -e "-h \t print this message"
        	exit 0
        ;;
        --)
           shift
           break
        ;;

    esac
    shift
done
